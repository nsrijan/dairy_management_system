{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Spring Boot: Run",
      "type": "shell",
      "command": "cd backend && ./mvnw spring-boot:run",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Spring Boot: Clean Package",
      "type": "shell",
      "command": "cd backend && ./mvnw clean package",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Spring Boot: Debug",
      "type": "shell",
      "command": "cd backend && ./mvnw spring-boot:run -Dspring-boot.run.jvmArguments=\"-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=8000\"",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
} 